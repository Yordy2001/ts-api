{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true, /* Skip type checking all .d.ts files. */
    "outDir": "./build"
  }
}